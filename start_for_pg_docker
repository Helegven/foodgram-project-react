#Пересоберите образ taski_backend с обновлённым файлом зависимостей: в директории backend/ выполните команду docker build.


docker build -t taski_backend . 

#Создадим сеть с именем django-network:
docker network create django-network 

# Присоединить к сети django-network контейнер db.
docker network connect django-network db 


docker run --env-file .env \
           --net django-network \
           --name foodgram_backend_container \
           -p 8000:8000 foodgram_backend 